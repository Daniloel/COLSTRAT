<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COLSTRAT.Views.MainView"
             BindingContext="{Binding Main, Source={StaticResource Key=Locator}}"
             BackgroundColor="Bisque">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Padding="20">
            <Label Text="Welcome to COLSTRAT!"
                   FontSize="25"
                   TextColor="ForestGreen" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center">
            </Label>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">
                <Button x:Name="btnIgneousRocks"
                        Text="Igneous Rocks"
                        BackgroundColor="GreenYellow"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand">
                </Button>
                <Button x:Name="btnMetamorphicRocks"
                        Text="Metamorphic Rocks"
                        BackgroundColor="GreenYellow"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand">
                </Button>
            </StackLayout>
            <Button x:Name="btnSedimentaryRocks"
                    Text="Sedimentary Rocks"
                    BackgroundColor="GreenYellow"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>